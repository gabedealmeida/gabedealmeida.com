                          td.px-6.py-3.text-sm.leading-5.text-gray-500.font-normal(class="hover:text-gray-900")
                            - const msg = commit.message.slice(0, 50) + '...';
                              a(href=`${commit.url}`)
                                | #{msg}
                          td.hidden.px-6.py-3.whitespace-no-wrap.text-sm.leading-5.text-gray-500.text-right(class="md:table-cell hover:text-gray-900")
                            - const time = new Date(commit.timestamp);
                            a(href=`${commit.url}`)
                              | #{timeAgo.format(time)}
