                            .text-sm.leading-5.text-gray-500.font-medium.truncate(class="group-hover:text-gray-900")
                              | #{document.repoPath}
                            // Heroicon name: chevron-right
                            svg.ml-4.h-5.w-5.text-gray-400.transition.ease-in-out.duration-150(class="group-hover:text-gray-500 group-focus:text-gray-600" viewbox="0 0 20 20" fill="currentColor")
                              path(fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd")
                  // More project rows...
            // Projects table (small breakpoint and up)
            .hidden.mt-8(class="sm:block")
              .align-middle.inline-block.min-w-full.border-b.border-gray-200
                table.min-w-full
                  thead
                    tr.border-t.border-gray-200
                      th.px-6.py-3.border-b.border-gray-200.bg-gray-50.text-left.text-xs.leading-4.font-medium.text-gray-500.uppercase.tracking-wider
                        span(class="lg:pl-2") Repo
                      th.px-6.py-3.border-b.border-gray-200.bg-gray-50.text-left.text-xs.leading-4.font-medium.text-gray-500.uppercase.tracking-wider
                        | Commit Message
                      th.hidden.px-6.py-3.border-b.border-gray-200.bg-gray-50.text-right.text-xs.leading-4.font-medium.text-gray-500.uppercase.tracking-wider(class="md:table-cell")
                        | Timestamp
                  tbody.bg-white.divide-y.divide-gray-100
                    each document in documents
                      each commit in document.commits
                        tr
                          td.px-6.py-3.max-w-0.whitespace-no-wrap.text-sm.leading-5.font-medium.text-gray-900(class="w-2/5")
                            .flex.items-center.space-x-3.my-2(class="lg:pl-2")
                              span.h-4.w-4.bg-green-100.rounded-full.flex.items-center.justify-center(aria-label="Running")
                                span.h-2.w-2.bg-green-400.rounded-full
                              span
                                a(href=`${document.repoUrl}`)
                                  h2.text-sm.font-medium.leading-5
                                    | #{document.repo}
                            a(href=`${commit.url}`)
                              div.relative.group.flex.items-center.space-x-3(class="lg:pl-2")
                                svg(class="flex-shrink-0 w-5 h-5 text-gray-400 group-hover:text-gray-500" viewbox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg")
